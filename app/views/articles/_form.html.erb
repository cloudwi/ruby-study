<%= form_with model: article, class: "space-y-6" do |f| %>
  <div>
    <%= f.label :title, "Title", class: "block text-sm font-semibold text-gray-700 mb-2" %>
    <%= f.text_field :title,
        placeholder: "Enter your article title...",
        class: "w-full px-4 py-3 border #{article.errors[:title].any? ? 'border-red-500' : 'border-gray-300'} rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all text-lg" %>
    <% article.errors.full_messages_for(:title).each do |message| %>
      <div class="mt-2 text-sm text-red-600 flex items-center">
        <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
        </svg>
        <%= message %>
      </div>
    <% end %>
  </div>

  <div>
    <%= f.label :body, "Content", class: "block text-sm font-semibold text-gray-700 mb-2" %>
    <%= f.text_area :body,
        rows: 12,
        placeholder: "Write your article content here...",
        class: "w-full px-4 py-3 border #{article.errors[:body].any? ? 'border-red-500' : 'border-gray-300'} rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all resize-none" %>
    <% article.errors.full_messages_for(:body).each do |message| %>
      <div class="mt-2 text-sm text-red-600 flex items-center">
        <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
        </svg>
        <%= message %>
      </div>
    <% end %>
  </div>

  <div>
    <%= f.label :status, "Visibility", class: "block text-sm font-semibold text-gray-700 mb-2" %>
    <%= f.select :status, Visible::VALID_STATUSES,
        { selected: article.status || "public" },
        class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" %>
  </div>

  <div class="flex gap-3 pt-4">
    <%= f.submit class: "flex-1 px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg transition duration-200 cursor-pointer shadow-md hover:shadow-lg" %>
    <%= link_to "Cancel", article.persisted? ? article_path(article) : root_path,
        class: "px-6 py-3 bg-gray-200 hover:bg-gray-300 text-gray-700 font-semibold rounded-lg transition duration-200 text-center" %>
  </div>
<% end %>