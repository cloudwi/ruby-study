<div class="max-w-4xl mx-auto">
  <!-- Back Button -->
  <%= link_to root_path, class: "inline-flex items-center text-gray-600 hover:text-gray-900 mb-6 transition-colors" do %>
    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
    </svg>
    Back to Articles
  <% end %>

  <!-- Article Header -->
  <article class="bg-white rounded-xl shadow-lg p-8 mb-8">
    <div class="mb-6">
      <h1 class="text-4xl font-bold text-gray-900 mb-4"><%= @article.title %></h1>
      <div class="flex items-center gap-3">
        <span class="px-3 py-1 bg-blue-100 text-blue-700 rounded-full text-sm font-medium">
          <%= @article.status %>
        </span>
        <% if @user.present? %>
          <span class="text-gray-600 text-sm">
            by <%= @user[:name] || @user["name"] %>
          </span>
        <% end %>
      </div>
    </div>

    <!-- Article Body -->
    <div class="prose prose-lg max-w-none text-gray-700 mb-6">
      <%= simple_format(@article.body) %>
    </div>

    <!-- Action Buttons -->
    <div class="flex gap-3 pt-6 border-t border-gray-200">
      <%= link_to edit_article_path(@article),
          class: "inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition duration-200 font-medium" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
        </svg>
        Edit
      <% end %>

      <%= link_to article_path(@article),
          data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' },
          class: "inline-flex items-center px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg transition duration-200 font-medium" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
        </svg>
        Delete
      <% end %>
    </div>
  </article>

  <!-- Comments Section -->
  <div class="bg-white rounded-xl shadow-lg p-8 mb-8">
    <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
      <svg class="w-6 h-6 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
      </svg>
      Comments (<%= @article.comments.count %>)
    </h2>

    <div class="space-y-4 mb-8">
      <%= render @article.comments %>
    </div>

    <!-- Add Comment Form -->
    <div class="border-t border-gray-200 pt-6">
      <h3 class="text-xl font-semibold text-gray-900 mb-4">Add a Comment</h3>
      <%= render 'comments/form' %>
    </div>
  </div>
</div>
