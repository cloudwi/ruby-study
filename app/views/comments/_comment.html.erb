<% unless comment.archived? %>
  <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
    <div class="flex items-start justify-between">
      <div class="flex-1">
        <div class="flex items-center gap-2 mb-2">
          <div class="w-8 h-8 bg-blue-600 rounded-full flex items-center justify-center text-white font-semibold text-sm">
            <%= comment.commenter[0].upcase %>
          </div>
          <div>
            <p class="font-semibold text-gray-900"><%= comment.commenter %></p>
            <p class="text-xs text-gray-500">
              <%= time_ago_in_words(comment.created_at) %> ago
            </p>
          </div>
        </div>
        <p class="text-gray-700 ml-10"><%= comment.body %></p>
      </div>
      <%= link_to [comment.article, comment],
          data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
          class: "text-red-600 hover:text-red-700 transition-colors ml-4" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
        </svg>
      <% end %>
    </div>
  </div>
<% end %>