<%= form_with model: [ @article, @article.comments.build], class: "space-y-4" do |f| %>
  <div>
    <%= f.label :commenter, "Name", class: "block text-sm font-semibold text-gray-700 mb-2" %>
    <% if @user %>
      <%= f.text_field :commenter,
          value: @user[:nickname] || @user["nickname"],
          class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" %>
    <% else %>
      <%= f.text_field :commenter,
          placeholder: "Your name",
          class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" %>
    <% end %>
  </div>

  <div>
    <%= f.label :body, "Comment", class: "block text-sm font-semibold text-gray-700 mb-2" %>
    <%= f.text_area :body,
        rows: 4,
        placeholder: "Share your thoughts...",
        class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all resize-none" %>
  </div>

  <div>
    <%= f.label :status, "Visibility", class: "block text-sm font-semibold text-gray-700 mb-2" %>
    <%= f.select :status, Visible::VALID_STATUSES,
        { selected: "public" },
        class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" %>
  </div>

  <div>
    <%= f.submit "Post Comment",
        class: "w-full px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg transition duration-200 cursor-pointer shadow-md hover:shadow-lg" %>
  </div>
<% end %>